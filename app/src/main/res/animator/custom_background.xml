<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
        <gradient android:angle="180" android:endColor="#DA70D6" android:startColor="#9932CC" />

        <stroke android:width="3dp" android:endColor="#808080" android:startColor="#C0C0C0" />

        <corners android:radius="3dp" />

        <padding android:bottom="10dp" android:left="50dp" android:right="50dp" android:top="10dp" />
    </shape></item>

    <item android:state_focused="true"><shape>
        <gradient android:angle="180" android:endColor="#000080" android:startColor="#000080" />

        <stroke android:width="3dp" android:endColor="#808080" android:startColor="#C0C0C0" />

        <corners android:radius="3dp" />

        <padding android:bottom="10dp" android:left="50dp" android:right="50dp" android:top="10dp" />
    </shape></item>

    <item><shape>
        <gradient android:angle="180" android:endColor="#DA70D6" android:startColor="#9932CC" />

